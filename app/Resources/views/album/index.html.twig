{% extends 'base.html.twig' %}

{% block body %}
    <h1>Albums list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Band</th>
                <th>Duration</th>
                <th>Released</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.name }}</td>
                <td>{% if album.band %}{{ album.band.name }}{% endif %}</td>
                <td>{{ album.duration }}</td>
                <td>{% if album.released %}{{ album.released|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('album_show', { 'id': album.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('album_edit', { 'id': album.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('album_new') }}">Create a new album</a>
        </li>
    </ul>
{% endblock %}
