{% extends 'base.html.twig' %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ album.duration }}</td>
            </tr>
            <tr>
                <th>Released</th>
                <td>{% if album.released %}{{ album.released|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Song(s)</th>
                <td>{% if album.songs %}
                    <ul>
                        {% for song in album.songs %}
                            <li>{{ song.name }} ({{ song.duration }})</li>
                        {% endfor %}
                    </ul>
                {% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('album_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('album_edit', { 'id': album.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
