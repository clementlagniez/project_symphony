{% extends 'base.html.twig' %}

{% block body %}
    <h1>Genres list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.name }}</td>
                <td>{% if genre.subgenres %}
                    <ul>
                        {% for subgenre in genre.subgenres %}
                            <li>{{ subgenre.name }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('genre_show', { 'id': genre.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('genre_edit', { 'id': genre.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('genre_new') }}">Create a new genre</a>
        </li>
    </ul>
{% endblock %}
