{% extends 'base.html.twig' %}

{% block body %}
    <h1>Charact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ charact.name }}</td>
            </tr>
            <tr>
                <th>Known as</th>
                <td>{{ charact.knownAs }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ charact.lastname }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ charact.age }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('charact_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('charact_edit', { 'id': charact.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
