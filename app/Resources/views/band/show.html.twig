{% extends 'base.html.twig' %}

{% block body %}
    <h1>Band</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ band.name }}</td>
            </tr>
            <tr>
                <th>Formed</th>
                <td>{{ band.formed }}</td>
            </tr>
            <tr>
                <th>Albums</th>
                <ul>
                    {% for album in band.albums %}
                        
                        <li>{{ album.name }}</li>

                    {% endfor %}
                </ul>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('band_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('band_edit', { 'id': band.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
