{% extends 'base.html.twig' %}

{% block body %}
    <h1>Movies list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Released</th>
                <th>Duration</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.name }}</td>
                <td>{% if movie.released %}{{ movie.released|date('Y-m-d') }}{% endif %}</td>
                <td>{{ movie.duration }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('movie_show', { 'id': movie.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('movie_edit', { 'id': movie.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('movie_new') }}">Create a new movie</a>
        </li>
    </ul>
{% endblock %}
