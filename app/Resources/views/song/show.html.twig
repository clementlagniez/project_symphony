{% extends 'base.html.twig' %}

{% block body %}
    <h1>Song</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ song.name }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ song.duration }}</td>
            </tr>
            <tr>
                <th>Album(s)</th>
                <td>{% if song.albums %}
                    <ul>
                        {% for album in song.albums %}
                            <li>{{ album.name }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}</td>
            </tr>
            <tr>
                <th>Track</th>
                <td>{% if song.tracks %}
                    <ul>
                        {% for track in song.tracks %}
                            <li>{{ track.number }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('song_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('song_edit', { 'id': song.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
