{% extends 'base.html.twig' %}

{% block body %}
    <h1>City</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{% if city.state %}{{ city.state.name }}{% endif %}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{% if city.state.country %}{{ city.state.country.name }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('city_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('city_edit', { 'id': city.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
