{% extends 'base.html.twig' %}

{% block body %}
    <h1>States list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Cities</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
        {% for state in states %}
            <tr>
                <td>{{ state.name }}</td>
                <td>{% if state.cities %}
                    <ul>
                        {% for city in state.cities %}
                            <li>{{ city.name }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}</td>
                <td>{% if state.country %}{{ state.country.name }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('state_show', { 'id': state.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('state_edit', { 'id': state.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('state_new') }}">Create a new state</a>
        </li>
    </ul>
{% endblock %}
