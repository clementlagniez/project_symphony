{% extends 'base.html.twig' %}

{% block body %}
    <center>

        <h1>Book</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ book.name }}</td>
                </tr>
                <tr>
                    <th>Author</th>
                    <td>{% if book.artist %}{{ book.artist.name }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Nopages</th>
                    <td>{{ book.nopages }}</td>
                </tr>
                <tr>
                    <th>Released</th>
                    <td>{% if book.released %}{{ book.released|date('Y-m-d') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('book_list') }}">Back to the list</a>
            </li>
        </ul>
    </center>
{% endblock %}
