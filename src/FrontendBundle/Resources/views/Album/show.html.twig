{% extends 'base.html.twig' %}

{% block body %}
    <center>

        <h1>Album</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ album.name }}</td>
                </tr>
                <tr>
                    <th>Duration</th>
                    <td>{{ album.duration }}</td>
                </tr>
                <tr>
                    <th>Released</th>
                    <td>{% if album.released %}{{ album.released|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Song(s)</th>
                    <td>{% if album.songs %}
                        <ul>
                            {% for song in album.songs %}
                                <li>{{ song.name }} ({{ song.duration }})</li>
                            {% endfor %}
                        </ul>
                    {% endif %}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('album_list') }}">Back to the list</a>
            </li>
        </ul>
    </center>
{% endblock %}
