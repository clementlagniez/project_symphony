{% extends 'base.html.twig' %}

{% block body %}
    <center>

        <h1>Band</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ band.name }}</td>
                </tr>
                <tr>
                    <th>Formed</th>
                    <td>{{ band.formed }}</td>
                </tr>
                <tr>
                    <th>Albums</th>
                    <td>{% if band.albums %}
                        <ul>
                            {% for album in band.albums %}
                                <li>{{ album.name }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('band_list') }}">Back to the list</a>
            </li>
        </ul>

    </center>
{% endblock %}
