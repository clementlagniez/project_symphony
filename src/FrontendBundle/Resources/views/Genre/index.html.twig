{% extends 'base.html.twig' %}

{% block body %}
<center>

    <h1>Genres list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Subgenre(s)</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.name }}</td>
                <td>{% if genre.subgenres %}
                    <ul>
                        {% for subgenre in genre.subgenres %}
                            <li>{{ subgenre.name }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('genre_detail', { 'id': genre.id }) }}">More informations</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</center>
{% endblock %}
