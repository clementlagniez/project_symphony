{% extends "::base.html.twig" %}

{% block body %}
	<center>
		<h1>Artist(s) currently added</h1>

		<table class="table">
	        <thead>
	            <tr>
	                <th>Name</th>
	                <th>Known as</th>
	                <th>Lastname</th>
	            </tr>
	        </thead>
	        <tbody>
				{% for artist in artists %}
					<tr>
						<td>{{ artist.name }}</td>
						<td>{% if artist.knownAs %}"{{ artist.knownAs }}"{% endif %}</td>
						<td>{{ artist.lastname }}</td>
						<td>
		                    <ul>
		                        <li>
		                            <a href="{{ path('artist_detail', { 'id': artist.id }) }}">More informations</a>
		                        </li>
		                    </ul>
                		</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</center>
{% endblock %}
