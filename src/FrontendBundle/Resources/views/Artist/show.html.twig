{% extends 'base.html.twig' %}

{% block body %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Known as</th>
                <td>{{ artist.knownAs }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ artist.lastname }}</td>
            </tr>
            <tr>
                <th>Birth</th>
                <td>{% if artist.birth %}{{ artist.birth|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Death</th>
                <td>{% if artist.death %}{{ artist.death|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{% if artist.city %}{{ artist.city.name }}{% endif %}</td>
            </tr>
            {% if artist.books %}
                <tr>
                    <th>Book(s)</th>
                    <td>
                        <ul>
                            {% for book in artist.books %}
                                <li>{{ book.name }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            {% endif %} 
            <tr>
                {% if artist.bands %}
                    <th>Band(s)</th>
                    <td>
                        <ul>
                            {% for band in artist.bands %}
                                <li>{{ band.name }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('artist_list') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
