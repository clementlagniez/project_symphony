{% extends 'base.html.twig' %}

{% block body %}
<center>

    <h1>States list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
        {% for state in states %}
            <tr>
                <td>{{ state.name }}</td>
                <td>{% if state.country %}{{ state.country.name }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('state_detail', { 'id': state.id }) }}">More informations</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</center>
{% endblock %}
